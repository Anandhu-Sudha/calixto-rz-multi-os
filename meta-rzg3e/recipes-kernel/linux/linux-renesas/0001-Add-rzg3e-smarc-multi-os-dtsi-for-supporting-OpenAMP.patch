+       		compatible = "shm_uio";
+       		reg = <0x0 0x42f00000 0x0 0x1000>;
+       		no-map;
+   	};
+
+   	mhu-shm@42f01000 {
+       		compatible = "shm_uio";
+       		reg = <0x0 0x42f01000 0x0 0x1000>;
+       		no-map;
+   	};
+
+   	mbox-uio@10480000 {
+       		compatible = "mbox_uio";
+       		reg = <0x00 0x10480000 0x00 0x1000>;
